<UserControl x:ConnectionId='1'
    x:Name="Root"
    x:Class="Bno1.Controls.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bno1.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    VerticalAlignment="Top"
    VerticalContentAlignment="Top"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    Height="59"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid x:ConnectionId='2' x:Name="titleBar" FlowDirection="RightToLeft" Background="#FF1EA8AF" Height="59">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Source="ms-appx:///Resources/logo.small.png" HorizontalAlignment="Center" Stretch="Uniform" Margin="8" />
        <Image Grid.Column="0" Source="ms-appx:///Resources/icons_user.png" HorizontalAlignment="Left" Margin="10" />
    </Grid>
</UserControl>

